<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical">    <TextView        android:id="@+id/tvTextEnterMobile"        android:layout_width="match_parent"        android:layout_height="@dimen/_30sdp"        android:background="@drawable/bg_loginmain"        android:gravity="center"        android:text="Enter Mobile Number"        android:textColor="@color/white"        android:textSize="@dimen/_14sdp"        android:textStyle="bold" />    <EditText        android:id="@+id/etForgotPassMobile"        android:layout_width="match_parent"        android:layout_below="@+id/tvTextEnterMobile"        android:layout_height="@dimen/_35sdp"        android:background="@drawable/bg_edittext"        android:inputType="number"        android:maxLength="10"        android:maxLines="1"        android:layout_marginTop="@dimen/_10sdp"        android:layout_marginRight="@dimen/_20sdp"        android:layout_marginLeft="@dimen/_20sdp"        android:hint="Enter Registered Mobile Number"        android:padding="@dimen/_5sdp" />    <Button        android:id="@+id/btnForgotCancel"        android:layout_width="wrap_content"        android:layout_height="@dimen/_35sdp"        android:layout_below="@+id/etForgotPassMobile"        android:layout_marginLeft="@dimen/_20sdp"        android:layout_marginTop="@dimen/_10sdp"        android:layout_marginBottom="@dimen/_30sdp"        android:background="@drawable/bg_buttons"        android:gravity="center"        android:text="CANCEL"        android:textColor="@color/white"        android:textStyle="normal" />    <Button        android:id="@+id/btnForgotOk"        android:layout_width="@dimen/_70sdp"        android:layout_height="@dimen/_35sdp"        android:layout_below="@+id/etForgotPassMobile"        android:layout_alignParentRight="true"        android:layout_marginTop="@dimen/_10sdp"        android:layout_marginRight="@dimen/_20sdp"        android:layout_marginBottom="@dimen/_30sdp"        android:background="@drawable/bg_buttons"        android:gravity="center"        android:text="OK"        android:textColor="@color/white"        android:textStyle="normal" /></RelativeLayout>