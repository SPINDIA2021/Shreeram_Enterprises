<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="8dip" />
            <stroke android:width="1dip" android:color="#6495ED" />
            <gradient android:angle="-90" android:endColor="#FFFFFF" android:startColor="#FFFFFF" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="8dip" />
            <stroke android:width="1dip" android:color="#6495ED" />
            <solid android:color="#6495ED" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dip" />
            <stroke android:width="2dip" android:color="#6495ED" />
            <gradient android:angle="-90" android:endColor="#6495ED" android:startColor="#6495ED" />
        </shape>
    </item>
</selector>