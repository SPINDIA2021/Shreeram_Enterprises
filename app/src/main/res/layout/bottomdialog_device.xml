<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:visibility="visible"
    android:theme="@style/AppBottomSheetDialogTheme"
    android:background="@drawable/rounded_dialog"
    >

    <!-- content header line -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rounded_dialog"
            android:backgroundTint="@color/newcolor1"
            android:paddingBottom="7dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Choose one"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="14sp" />



            <ImageView
                android:id="@+id/img_back"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_baseline_arrow_back_24"
                app:tint="@color/white" />

        </RelativeLayout>




        <LinearLayout
            android:id="@+id/brush_colors_container"
            android:layout_below="@+id/lay5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="30dp"
                android:layout_marginBottom="20dp">

                <RelativeLayout
                    android:id="@+id/btn_morpho"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    >

                    <ImageView
                        android:id="@+id/img_capture"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginVertical="10dp"
                        android:src="@drawable/morpho" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_capture"
                        android:layout_centerHorizontal="true"
                        android:text="MORPHO"
                        android:textStyle="bold"
                        android:textColor="@color/newcolor1"
                        android:textSize="14sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/btn_mantra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    >

                    <ImageView
                        android:id="@+id/img_addimage"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginVertical="10dp"
                        android:src="@drawable/mantra" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="MANTRA"
                        android:layout_below="@+id/img_addimage"
                        android:textColor="@color/newcolor1"
                        android:textSize="14sp"
                        android:textStyle="bold"/>
                </RelativeLayout>


            </LinearLayout>





        </LinearLayout>
    </LinearLayout>

</LinearLayout>

