        <RelativeLayout
            android:layout_below="@+id/custToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/tvRequestTag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center"
                android:padding="@dimen/_3sdp"
                android:text="Send Funds to User"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvRequestTag"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:paddingTop="@dimen/_1sdp"
                    android:paddingBottom="@dimen/_1sdp"
                    android:text="Select User :"
                    android:textAllCaps="true"
                    android:textColor="@color/black" />

                <RelativeLayout
                    android:id="@+id/rlUserNumber"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="0dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/back_edit"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp">

                    <ImageView
                        android:id="@+id/ivNumber"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_phone_android_black_24dp">

                    </ImageView>



                    <EditText
                        android:id="@+id/etCustMobileNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/ivNumber"
                        android:background="@null"
                        android:drawablePadding="@dimen/_2sdp"
                        android:gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:hint="User Mobile Number"
                        android:inputType="number"
                        android:maxLength="10"
                        android:maxLines="1"
                        android:textSize="14sp" />


                    <TextView
                        android:gravity="center"
                        android:id="@+id/btnGetDetails"
                        android:textColor="@color/white"
                        android:layout_width="@dimen/_80sdp"
                        android:background="@drawable/bg_buttons"
                        android:layout_height="@dimen/_20sdp"
                        android:backgroundTint="@color/new_app_color"
                        android:text="Get Details"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="20dp"
                    android:paddingTop="@dimen/_1sdp"
                    android:paddingBottom="@dimen/_1sdp"

                    android:text="Select User :"
                    android:textAllCaps="true"
                    android:textColor="@color/black" />

                <RelativeLayout
                    android:id="@+id/rlUserName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="0dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/back_edit"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp">

                    <ImageView
                        android:id="@+id/ivOldPassword"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_person_black_24dp">

                    </ImageView>

                    <TextView
                        android:id="@+id/tvCustomerName"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_toRightOf="@+id/ivOldPassword"
                        android:background="@null"
                        android:drawablePadding="@dimen/_2sdp"
                        android:gravity="center_vertical"
                        android:hint="User Name"
                        android:textSize="14sp" />


                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="20dp"
                    android:paddingTop="@dimen/_1sdp"
                    android:paddingBottom="@dimen/_1sdp"

                    android:text="User Current Balance :"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:visibility="gone"/>

                <RelativeLayout
                    android:id="@+id/rlUserBalance"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="0dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/back_edit"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/ivUserBalance"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:padding="@dimen/_2sdp"
                        android:src="@drawable/icon_rupee">

                    </ImageView>


                    <TextView
                        android:id="@+id/tvUserBalance"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_toRightOf="@+id/ivUserBalance"
                        android:background="@null"
                        android:drawablePadding="@dimen/_2sdp"
                        android:gravity="center_vertical"
                        android:hint="User Balance"
                        android:textSize="14sp" />


                </RelativeLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="20dp"
                    android:paddingTop="@dimen/_1sdp"
                    android:paddingBottom="@dimen/_1sdp"
                    android:text="Enter Amount :"
                    android:textAllCaps="true"
                    android:textColor="@color/black" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="0dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/back_edit"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp">

                    <ImageView
                        android:id="@+id/ivRefNumber"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_rupee">

                    </ImageView>


                    <EditText
                        android:id="@+id/etTransferFundsAmount"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_toRightOf="@+id/ivRefNumber"
                        android:background="@null"
                        android:drawablePadding="@dimen/_2sdp"
                        android:hint="Enter Amount to Transfer"
                        android:inputType="numberDecimal"
                        android:maxLines="1"
                        android:textSize="14sp" />


                </RelativeLayout>

                <Button
                    android:id="@+id/btnTransferFunds"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:background="@drawable/bg_buttons"
                    android:text="Transfer Funds"
                    android:textColor="@color/white" />


            </LinearLayout>

        </RelativeLayout>


    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_centerInParent="true"
        android:elevation="@dimen/_10sdp"
        android:visibility="gone" />
